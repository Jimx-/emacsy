# noweb.am
#SUFFIXES += .nw .tex .pdf

%.tex : %.nw
	noweave -x -delay $< | cpif $@

%.c : %.nw
	notangle -R$@ $< | cpif $@

%.h : %.nw
	notangle -R$@ $< | cpif $@

%.cpp: %.nw
	notangle -R$@ $< | cpif $@

%.pdf: %.tex
	TEXINPUTS=$(srcdir):$(imagesdir): latexmk -f -halt-on-error -c-style-errors -pdf -p $<; true

clean-local:
	latexmk -c

distclean-local:
	latexmk -C
