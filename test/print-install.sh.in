#!/bin/bash
# print-install.sh.in
set -e; # abort if anything fails
builddir="@abs_top_builddir@"
cd $builddir
make distdir
dirname=@DISTDIR@
cd $dirname
./configure --prefix="$builddir/print-install"

# Make sure it can be built without noweb and cleaned without removing
# anything important.
make clean
make
make install
cd $builddir
find "print-install"
rm -rf "$builddir/print-install"
